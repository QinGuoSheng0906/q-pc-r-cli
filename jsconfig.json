{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@actions/*": ["src/stores/actions/*"],
      "@reducers/*": ["src/stores/reducers/*"],
      "@assets/*": ["src/assets/*"],
      "@images/*": ["src/assets/images/*"],
      "@styles/*": ["src/assets/styles/*"],
      "@lib/*": ["src/lib/*"],
      "@enums/*": ["src/lib/enums*"],
      "@const/*": ["src/lib/const*"],
      "@pages/*": ["src/pages/*"],
    },
    "target": "ES6",
    "module": "commonjs",
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}